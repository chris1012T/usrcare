<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MaterialTextfieldStyle"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/TextfieldBoxStrokeColor</item>
        <item name="boxBackgroundColor">@color/TextfieldBoxStrokeColor</item>
        <item name="hintTextColor">@color/MainTextColor</item>
        <item name="android:textColorHint">@color/TextfieldHintTextColor</item>
        <item name="android:textColor">@color/MainTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
    </style>
    <style name="Verify_code_input_area"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/verfiy_code_selector</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/MainButtonTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
    </style>
    <style name="btn_main_one_line">
        <item name="cornerRadius">15sp</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="iconSize">30sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="btn_main_three_line">
        <item name="cornerRadius">15sp</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="iconSize">48sp</item>
        <item name="iconGravity">textTop</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="avatar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="text_page_message">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/MainTextColor</item>
        <item name="android:layout_marginTop">90dp</item>
    </style>

    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Color of the datepicker header and selected date -->
        <item name="colorAccent">@color/MainButtonColor</item>
        <!-- Color of the datepicker calendar selected date -->
        <item name="colorControlActivated">@color/MainButtonColor</item>
        <!-- Color of the dialog background -->
        <item name="android:windowBackground">@color/gray</item>
        <!-- Color of the text on buttons -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Color of the text on the month navigation buttons -->
        <item name="android:textColorSecondary">@color/MainButtonColor</item>
        <!-- Color of the divider between the header and the calendar -->
        <item name="colorControlNormal">@color/MainButtonColor</item>
        <!-- Color of the calendar background -->
        <item name="android:colorBackground">@color/MainButtonColor</item>
        <!-- Color of the calendar header -->
        <item name="android:colorPrimary">@color/MainButtonColor</item>
        <!-- Color of the calendar header text -->
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <!-- Color of the calendar header navigation arrows -->
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <!-- Color of the calendar weekdays -->
        <item name="android:colorPrimaryDark">@color/MainButtonColor</item>
        <!-- Color of the calendar selected date -->
        <item name="android:colorAccent">@color/MainButtonColor</item>
        <!-- Color of the calendar selected date background -->
        <item name="android:colorControlActivated">@color/MainButtonColor</item>
        <!-- Color of text on the calendar -->
        <item name="android:textColor">@color/MainButtonColor</item>
    </style>


</resources>