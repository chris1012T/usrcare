<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.login.ResetPasswordFragment"
    android:background="@drawable/bg_normal_page">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"
            android:paddingTop="20dp"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_back"
                app:backgroundTint="@null"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_account"
                        android:textSize="26sp"
                        android:textColor="@color/MainTextColor"
                        android:layout_gravity="top"
                        android:paddingStart="12dp"
                        tools:ignore="RtlSymmetry" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_marginTop="2dp"
                        android:hint="@string/select_account"
                        >
                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/accountSelectEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="none"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_otp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/enter_otp"
                        android:textSize="26sp"
                        android:textColor="@color/MainTextColor"
                        android:layout_gravity="top"
                        android:paddingStart="12dp"
                        tools:ignore="RtlSymmetry" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_otp"
                            android:layout_weight="0.8"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            style="@style/MaterialTextfieldStyle"
                            android:layout_marginTop="2dp"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:drawableStart="@drawable/ic_email"
                                android:drawablePadding="18dp"
                                android:hint="@string/otp"
                                android:id="@+id/otpEditText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="number"
                                android:maxLength="6"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.button.MaterialButton
                            style="@style/Theme.Usrcare.Login"
                            android:id="@+id/btn_resend_otp"
                            android:layout_height="65dp"
                            android:layout_weight="0.3"
                            android:layout_width="wrap_content"
                            android:text="@string/resent_otp"
                            android:textColor="@color/SecondaryButtonTextColor"
                            android:textSize="21sp"
                            app:backgroundTint="@color/SecondaryButtonColor"
                            app:cornerRadius="8dp" />
                    </LinearLayout>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_new_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/new_password"
                        android:textSize="26sp"
                        android:textColor="@color/MainTextColor"
                        android:layout_gravity="top"
                        android:paddingStart="12dp"
                        tools:ignore="RtlSymmetry" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/MaterialTextfieldStyle"
                        android:layout_marginTop="2dp"
                        app:passwordToggleEnabled="true"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:drawableStart="@drawable/ic_name"
                            android:drawablePadding="18dp"
                            android:hint="@string/enter_password"
                            android:autofillHints="password"
                            android:id="@+id/passwordEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPassword"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_sec_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/MaterialTextfieldStyle"
                        android:layout_marginTop="2dp"
                        app:passwordToggleEnabled="true"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:drawableStart="@drawable/ic_name"
                            android:drawablePadding="18dp"
                            android:hint="@string/enter_password_again"
                            android:autofillHints="password"
                            android:id="@+id/secPasswordEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPassword"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.button.MaterialButton
                        style="@style/Theme.Usrcare.Login"
                        android:id="@+id/btn_next"
                        android:layout_height="65dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:text="@string/next"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        app:backgroundTint="@color/MainButtonColor"
                        app:cornerRadius="8dp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="178dp"
            android:layout_height="178dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="loading.json"
            app:lottie_loop="true" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>